<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # 1. Ausnahme f√ºr /api-Aufrufe
  # Wenn die URL mit /api beginnt, wird der Rewrite-Prozess hier gestoppt
  # und die Anfrage wird normal weitergegeben (z. B. an PHP oder einen Proxy).
  RewriteRule ^api/ - [L]

  # 2. Standard Vue.js History-Mode Redirect
  # Wenn die angeforderte Ressource keine existierende Datei (-f)
  # und kein existierendes Verzeichnis (-d) ist, leite alles an index.html weiter.
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>
